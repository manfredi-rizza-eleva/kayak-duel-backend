{
  "compilerOptions": {
    "target": "ES2020",

    "module": "CommonJS",
    // "moduleResolution": "Node",

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "strict": true,

    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": false, // <-- importantissimo
    "noUncheckedSideEffectImports": false,
    "moduleDetection": "auto"
  },
  "include": ["src"]
}
